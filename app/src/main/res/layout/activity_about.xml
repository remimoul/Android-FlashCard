<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/version"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <TextView
        android:id="@+id/aboutTextView"
        android:layout_width="265dp"
        android:layout_height="223dp"
        android:fontFamily="sans-serif-black"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FFC107"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.397"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.509" />

    <ImageView
        android:id="@+id/AboutImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/aboutTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/cream2" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/metal_mania"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/appVersion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AboutImageView" />

    <TextView
        android:id="@+id/nameGroup"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="-300dp"
        android:layout_marginBottom="500dp"
        android:fontFamily="@font/metal_mania"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/aboutTextView"
        app:layout_constraintEnd_toEndOf="@+id/appName"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/appName"
        app:layout_constraintTop_toBottomOf="@+id/appVersion" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/black_ops_one"
        android:text="App Name"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/appName"
        app:layout_constraintEnd_toStartOf="@+id/appName"
        app:layout_constraintTop_toTopOf="@+id/appName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="103dp"
        android:layout_height="29dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/black_ops_one"
        android:text="Version"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/appVersion"
        app:layout_constraintEnd_toStartOf="@+id/appVersion"
        app:layout_constraintTop_toTopOf="@+id/appVersion" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="110dp"
        android:layout_height="32dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/black_ops_one"
        android:text="Made by"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/nameGroup"
        app:layout_constraintEnd_toStartOf="@+id/nameGroup"
        app:layout_constraintTop_toTopOf="@+id/nameGroup" />

    <TextView
        android:id="@+id/appVersion"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="350dp"
        android:fontFamily="@font/metal_mania"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/nameGroup"
        app:layout_constraintEnd_toEndOf="@+id/appName"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/appName"
        app:layout_constraintTop_toBottomOf="@+id/appName" />

</androidx.constraintlayout.widget.ConstraintLayout>